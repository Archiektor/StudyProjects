<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="4"
    tools:context="com.hfad.mindbreaker.PolyglotFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/new_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        android:layout_marginLeft="142dp"
        android:layout_marginTop="75dp"
        android:layout_row="0"
        android:hint=""
        android:text="@string/new_word"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/missingLetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_gravity="center"
        android:layout_row="1"
        android:ems="3"
        android:gravity="center"
        android:hint="***"
        android:inputType="text"
        android:text="@string/missing_letter" />

    <Button
        android:id="@+id/checkAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_gravity="center"
        android:layout_marginTop="175dp"
        android:layout_row="2"
        android:text="@string/check_answer" />

    <Button
        android:id="@+id/takeHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_gravity="center"
        android:layout_row="3"
        android:text="@string/take_hint" />


</GridLayout>
