<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal"

    tools:context="com.hfad.beeradviser.FindBeerActivity">

    <Spinner
        android:id="@+id/colors_of_beer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="left"

        android:entries="@array/beer_colors"

        android:gravity="bottom" />

    <Button
        android:id="@+id/button_find_beer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colors_of_beer"


        android:onClick="onClickFindBeer"

        android:text="@string/findBeer" />

    <TextView
        android:id="@+id/brands_of_beer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_weight="1"

        android:gravity="left"

        android:text="@string/brands"

        />


</LinearLayout>
